```C
0x8f80294: // Detect flash chip model.  Output result (1 | 2 | 3) in r0.
  r3 = 0x8000000;

  *0x8000000 = 0xff;
  *0x8000000 = 0x50;
  *0x8000000 = 0x90;

  if (*0x8000000 != 0x8a) {
    *0x8000000 = 0xf0;
    return 2; // r0 = 2; goto 0x8f80380;
  }

  *0x8000000 = 0xff;
  *0x8000000 = 0x90;
  switch (*0x8000002) {
  case 0x8815:
  case 0x8810:
  case 0x880e:
    *0x8000002 = 0xff;
    return 3 // r0 = 3; goto 0x8f80380;
  case 0x887d:
  case 0x88b0:
    *0x8000002 = 0xff;
    return 1; // r0 = 1; goto 0x8f80380;
  case 0x227d:
  default:
    *0x8000002 = 0xf0;
    return 2; // r0 = 2; goto 0x8f80380;
    break;
  }
0x8f80380:
  goto 0x08f80388;
```

